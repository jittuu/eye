@{
    ViewData["Title"] = "Shops";
}

@model IEnumerable<Shop>

<h1>Shops</h1>

<a class="btn btn-success pull-right top-action" asp-controller="Shops" asp-action="New"><i class="fa fa-plus fa-fw"></i>New</a>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Likes</th>
            <th>Last Posted Date</th>
            <th>In Stock</th>
            <th>Pre Order</th>
            <th>Pre Paid</th>
            <th>Posts Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ var no = 0;}
        @foreach (var s in Model)
        {
            no++;
            <tr>
                <td>@no</td>
                <td><span class="mm-text">@s.Name</span></td>
                <td>@s.TotalLikes</td>
                <td>@s.LastPostedDate.ToString("dd-MMM-yyyy")</td>
                <td>
                    @if (s.IsOnStock)
                    {
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                    }
                </td>
                <td>
                    @if (s.IsPreOrder)
                    {
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                    }
                </td>
                <td>
                    @if (s.IsPrePaid)
                    {
                        <i class="fa fa-check-circle" aria-hidden="true"></i>
                    }
                </td>
                <td>@s.TotalPosts</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id">Details</a> | 
                    <a asp-action="Edit" asp-route-id="@s.Id">Edit</a> | 
                    <a href="@s.PageURL" target="_blank">
                        <i class="fa fa-facebook fa-fw" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
